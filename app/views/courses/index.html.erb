<p id="notice"><%= notice %></p>

<h1>课程信息</h1>

<table style="margin:0 auto" class="gridtable"">
  <thead>
    <tr>
      <th>课程号</th>
      <th>课程名称</th>
      <th>课程类型</th>
      <th>学分</th>
      <th>学时</th>
      <th>教室</th>
      <th>限选人数</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_id %></td>
        <td><%= course.course_name %></td>
        <td><%= course.course_type %></td>
        <td><%= course.credit %></td>
        <td><%= course.class_hour %></td>
        <td><%= course.room %></td>
        <td><%= course.max_num %></td>
        <td><%= link_to '查看', course %></td>
        <td><%= link_to '编辑', edit_course_path(course) %></td>
        <td><%= link_to '删除', course, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

